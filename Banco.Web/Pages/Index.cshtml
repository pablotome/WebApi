@page
@model IndexModel
@{
    ViewData["Title"] = "Clientes";
}
<h2>Clientes</h2>
<table id="tblClientes" class="table">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Fecha Nacimiento</th>
            <th>Fecha Alta</th>
            <th></th>
        </tr>
    </thead>
</table>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalCliente">Nuevo Cliente</button>
<div class="modal" tabindex="-1" role="dialog" id="modalCliente">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtApellido">Apellido</label>
                            <input id="txtApellido" class="form-control" type="text" placeholder="Apellido" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtNombre">Nombre</label>
                            <input id="txtNombre" class="form-control" type="text" placeholder="Nombre" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="txtFechaNacimiento">Fecha de Nacimiento</label>
                            <input id="txtFechaNacimiento" class="form-control" type="date" placeholder="Fecha de Nacimiento" />
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-success" onclick="agregarCliente()">Agregar Cliente</button>
            </div>
        </div>
    </div>
</div>